{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Danh sách Loại Sản Phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Tên Loại", new { @class = "control-label col-md-2" })

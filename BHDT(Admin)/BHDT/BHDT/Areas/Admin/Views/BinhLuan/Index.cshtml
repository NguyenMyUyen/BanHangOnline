@model IEnumerable<BHDT.Model.BinhLuan>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách Bình Luận</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Sản Phẩm - Tên SP
        </th>
        <th>
            Thành Viên - Tài Khoản
        </th>
        <th>
            Nội Dung Bình Luận
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThanhVien.TaiKhoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDungBL)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaBL }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaBL }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.MaBL })
            </td>
        </tr>
    }

</table>
